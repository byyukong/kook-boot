                <property name="url" value="jdbc:mysql://localhost:3306/kook-bot?characterEncoding=utf-8&amp;useSSL=false&amp;allowPublicKeyRetrieval=true"/>
                <property name="username" value="root"/>
                <property name="password" value="1157436060"/>
            </dataSource>
        </environment>
    </environments>
    <!--每一个Mapper.xml的需要在Mybatis核心配置文件中注册-->
    <mappers>
        <mapper resource="com/kook/mapper/SteamApiMapper.xml"/>
    </mappers>


</configuration>